@model Project.UI.Models.ProductListViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Models";
    ViewData["Username"] = @Model.User.UserName;
    ViewData["Role"] = @Model.User.Role;
    ViewData["Models"] = @Model.Models;
    ViewData["Materials"] = @Model.Materials;
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



<div class="banner-section section-top-gap-100">
    <div class="banner-wrapper clearfix">
        @foreach (var item in @Model.Models)
        {

            <div  style="margin: 20px !important;" class="banner-single-item banner-style-4 banner-animation banner-color--green float-left aos-init aos-animate" data-aos="fade-up" data-aos-delay="0">
                <div class="image">
                    <img  style="height:200px !important;" class="img-fluid" src="~/images/@item.ImagePath" alt="">
                </div>
                <a asp-action="Products" asp-controller="Home" asp-route-modelId="@item.Id" class="content">
                    <div class="inner">
                        <h4 class="title">@item.Name</h4>
                    </div>
                    <span class="round-btn"><i class="ion-ios-arrow-thin-right"></i></span>
                </a>
            </div>
        }
    </div>
</div>

