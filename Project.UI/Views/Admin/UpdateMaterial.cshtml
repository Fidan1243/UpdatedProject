@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Project.UI.Models.MaterialViewModel

@{
    ViewData["Title"] = "Update Material";
    ViewData["Username"] = @Model.User.UserName;
    ViewData["Role"] = @Model.User.Role;
    ViewData["Materials"] = @Model.Materials;
    ViewData["Models"] = @Model.Models;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h2>
    Update Material
</h2>

<div class="container">
    <div id="loginbox" style="margin-top:50px;"
         class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">

            <div style="padding-top:30px;" class="panel-body">
                <div style="display:none;" id="login-alert"
                     class="alert alert-danger col-sm-12">
                </div>




                <form asp-controller="Admin" asp-action="UpdateMaterial" enctype="multipart/form-data" role="form" method="post">
                    <div style="margin-bottom:15px;" hidden class="form-group">
                        <label asp-for="@Model.Material.Id">Id</label>
                        <input asp-for="@Model.Material.Id" class="form-control" placeholder="Id" />
                        <span asp-validation-for="@Model.Material.Id"></span>
                    </div>
                    <div style="margin-bottom:15px;" hidden class="form-group">
                        <label asp-for="@Model.Material.ImagePath">Photo</label>
                        <input asp-for="@Model.Material.ImagePath" class="form-control" placeholder="Id" />
                        <span asp-validation-for="@Model.Material.ImagePath"></span>
                    </div>
                    <div style="margin-bottom:15px" class="form-group">
                        <label asp-for="@Model.Material.Name">Name</label>
                        <input asp-for="@Model.Material.Name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="@Model.Material.Name"></span>
                    </div>
                    <div style="margin-bottom:15px" class="form-group">
                        <label asp-for="@Model.File">Image Path</label>
                        <input asp-for="@Model.File" class="form-control" placeholder="File" />
                        <span asp-validation-for="@Model.File"></span>
                    </div>
                    <input type="submit" value="Update" class="btn btn-xs btn-outline-success" />
                </form>

            </div>
        </div>
    </div>
</div>